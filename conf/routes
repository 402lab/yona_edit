# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# User
GET     /users/login                controllers.UserApp.login()

# Boards
GET     /boardList                  controllers.BoardApp.boardList(pageNum:Int = 1)
GET     /boards/new                 controllers.BoardApp.newPost()
POST    /boards/new                 controllers.BoardApp.savePost()
GET     /board/:id                  controllers.BoardApp.post(id:Long)
POST    /board/:id/replay           controllers.BoardApp.saveComment(id:Long)
GET     /board/:id/delete           controllers.BoardApp.delete(id:Long)
GET     /boardList/:pageNum         controllers.BoardApp.boardList(pageNum:Int)
GET     /boards/edit                controllers.BoardApp.editPost(id:Long)

# Projects
GET		/projects/new				controllers.ProjectApp.newProject()
POST	/projects/new 				controllers.ProjectApp.saveProject()
GET     /project/:id                controllers.ProjectApp.project(id:Long)
GET     /project/:id/setting        controllers.ProjectApp.setting(id:Long)
POST    /project/:id/setting   		controllers.ProjectApp.saveSetting(id:Long)
GET 	/project/:id/delete    		controllers.ProjectApp.deleteProject(id:Long)

#Milestones
GET     /project/:pId/milestones        controllers.MilestoneApp.milestones(pId:Long, state ?= "open", sort ?= "dueDate", direction ?= "asc")
GET     /project/:pId/milestones/manage controllers.MilestoneApp.manageMilestones(pId:Long, sort ?= "dueDate", direction ?= "asc")
GET		/project/:pId/milestones/new    controllers.MilestoneApp.newMilestone(pId:Long)
POST	/milestones/new				    controllers.MilestoneApp.createMilestone()
POST	/milestones/:id/save		    controllers.MilestoneApp.updateMilestone(id: Long)
POST	/milestones/:id/delete		    controllers.MilestoneApp.deleteMilestone(id: Long)


#Issues
GET		/issueList					controllers.IssueApp.issueList(pageNum:Int = 1, status:Int = 5)
GET		/issueList/:status			controllers.IssueApp.issueList(pageNum:Int = 1, status:Int)
GET		/issues/new					controllers.IssueApp.newIssue()
#POST	/issues/new					controllers.IssueApp.saveIssue()
GET     /issues/:id                 controllers.IssueApp.issue(id:Long)
POST    /issue/:id/replay           controllers.IssueApp.saveComment(id:Long)
GET     /issue/:id/delete           controllers.IssueApp.delete(id:Long)