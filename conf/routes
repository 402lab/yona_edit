# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# User
GET     /users/login                controllers.UserApp.login()

# Boards
GET     /boardList                  controllers.BoardApp.boardList(pageNum:Int = 1, order:String ?= "desc", key ?= "id")
GET     /boardList/:pageNum         controllers.BoardApp.boardList(pageNum:Int, order:String ?= "desc", key ?= "id")
GET     /boards/new                 controllers.BoardApp.newPost()
POST    /boards/new                 controllers.BoardApp.savePost()
GET     /board/:id                  controllers.BoardApp.post(id:Long)
POST    /board/:id/replay           controllers.BoardApp.saveComment(id:Long)
GET     /board/:id/delete           controllers.BoardApp.delete(id:Long)
GET     /boards/:id/edit            controllers.BoardApp.editPost(id:Long)
POST    /boards/:id/edit            controllers.BoardApp.updatePost(id:Long)

# Projects
GET		/projects/new				controllers.ProjectApp.newProject()
POST	/projects/new 				controllers.ProjectApp.saveProject()
GET     /project/:id                controllers.ProjectApp.project(id:Long)
GET     /project/:id/setting        controllers.ProjectApp.setting(id:Long)
POST    /project/:id/setting   		controllers.ProjectApp.saveSetting(id:Long)
GET 	/project/:id/delete    		controllers.ProjectApp.deleteProject(id:Long)
GET     /project/:id/memberList     controllers.ProjectApp.memberList(id:Long)
POST    /project/:id/addMember      controllers.ProjectApp.addMember(id:Long)

#Milestones
GET     /project/:pId/milestones            controllers.MilestoneApp.milestones(pId:Long, state ?= "open", sort ?= "dueDate", direction ?= "asc")
GET     /project/:pId/milestones/manage     controllers.MilestoneApp.manageMilestones(pId:Long, sort ?= "dueDate", direction ?= "asc")
GET		/project/:pId/milestones/new        controllers.MilestoneApp.newMilestone(pId:Long)
POST	/project/:pId/milestones/new		controllers.MilestoneApp.createMilestone(pId:Long)
POST	/project/:pId/milestones/:id/save	controllers.MilestoneApp.updateMilestone(pId:Long, id: Long)
GET		/project/:pId/milestones/:id/delete controllers.MilestoneApp.deleteMilestone(pId:Long, id: Long)
GET	    /project/:pId/milestones/:id/edit   controllers.MilestoneApp.editMilestone(pId:Long, id: Long)

#Issues
GET     /issueList	                controllers.IssueApp.list(projectId:Long, pageNum:Int ?= 0, sortBy:String ?= "id", order:String ?= "desc", filter:String ?= "", status:String ?= "open", commentedCheck:Boolean ?= false, fileAttachedCheck:Boolean ?= false)
POST    /issueList	                controllers.IssueApp.list(projectId:Long, pageNum:Int ?= 0, sortBy:String ?= "id", order:String ?= "desc", filter:String ?= "", status:String ?= "open", commentedCheck:Boolean ?= false, fileAttachedCheck:Boolean ?= false)

GET		/issues/new					controllers.IssueApp.newIssue(projectId:Long)
POST	/issues/new					controllers.IssueApp.saveIssue(projectId:Long)
GET     /issues/:id                 controllers.IssueApp.issue(id:Long, projectId:Long)
POST    /issue/:id/replay           controllers.IssueApp.saveComment(id:Long, projectId:Long)
GET     /issue/:id/delete           controllers.IssueApp.delete(id:Long, projectId:Long)
GET		/issueList/excel			controllers.IssueApp.extractExcelFile()
